# Node environment (development, production, test)
NODE_ENV=development

# API server port
PORT=8080

# Frontend URL (for CORS)
WEB_URL=http://localhost:5173

# API URL (for SSR requests from web app)
API_URL=http://localhost:8080

# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://movies:movies_dev_password@localhost:5432/movies_db

# Session cookie secret (min 32 characters)
COOKIE_SECRET=your_local_dev_secret_change_in_production

# JWT Configuration
JWT_ACCESS_SECRET=your-access-token-secret-min-32-chars
JWT_REFRESH_SECRET=your-refresh-token-secret-min-32-chars
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
BCRYPT_ROUNDS=12

# Kinopoisk API Configuration
KINOPOISK_API_KEY=your_kinopoisk_api_key_here
KINOPOISK_BASE_URL=https://kinopoiskapi.com
