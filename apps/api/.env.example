# Node environment (development, production, test)
NODE_ENV=development

# API server port
PORT=3000

# Frontend URL (for CORS)
WEB_URL=http://localhost:5173

# API URL (for SSR requests from web app)
API_URL=http://localhost:3000

# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://movies:movies_dev_password@localhost:5432/movies_db

# Session cookie secret (min 32 characters)
# Generate with: openssl rand -base64 32
COOKIE_SECRET=your_local_dev_secret_change_in_production
