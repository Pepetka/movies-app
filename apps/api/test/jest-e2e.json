{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^\\$common/(.*)$": "<rootDir>/../src/common/$1",
    "^\\$src/(.*)$": "<rootDir>/../src/$1",
    "^\\$db/(.*)$": "<rootDir>/../src/db/$1"
  },
  "forceExit": true,
  "maxWorkers": 1
}
