{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "@repo/ui",
	"version": "0.4.0",
	"scripts": {
		"start": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"format": "prettier --write .",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"check": "eslint . && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"fix": "eslint . --fix && prettier --write .",
		"check:types": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./styles": "./dist/styles/index.js",
		"./styles/bundle.css": "./dist/styles/bundle.css"
	},
	"peerDependencies": {
		"svelte": "catalog:"
	},
	"devDependencies": {
		"@repo/eslint-config": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@sveltejs/kit": "catalog:",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "catalog:",
		"@types/node": "catalog:",
		"eslint": "catalog:",
		"@eslint/compat": "catalog:",
		"prettier": "catalog:",
		"prettier-plugin-svelte": "catalog:",
		"publint": "^0.3.15",
		"svelte": "catalog:",
		"svelte-check": "catalog:",
		"typescript": "catalog:",
		"vite": "catalog:",
		"storybook": "^10.2.8",
		"@storybook/sveltekit": "^10.2.8",
		"@storybook/addon-svelte-csf": "^5.0.11"
	},
	"keywords": [
		"svelte"
	],
	"dependencies": {
		"@lucide/svelte": "^0.564.0"
	}
}
